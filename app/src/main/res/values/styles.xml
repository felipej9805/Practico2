<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Estilo para los titulos-->
    <style name="style_titulos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">"#000000"</item>
    </style>

    <!--Estilo para las preguntas-->
    <style name="style_preguntas">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">"#000000"</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <!--Estilo para los LinearLayout que agrupan-->
    <style name="style_LinearAgrupa">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Estilo para las opciones tanto del registro como de las estadisticas-->
    <style name="style_opciones">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Estilo para boton fondo rojo-letra blanca-->
    <style name="style_botonFondoBlanco">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/redondear_rojo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:layout_gravity">center</item>

    </style>


    <!-- Estilo para los botones de pantalla principal ( fondo blanco-letras rojas) -->
    <style name="style_botonesPantallaP">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/redondear_blanco</item>
        <item name="android:textColor">@color/colorRojoApp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>

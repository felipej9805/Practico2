<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- PREGUNTA 1-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primera pregunta"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/pregunta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/resp_1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta1" />

            <RadioButton
                android:id="@+id/resp_1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta2" />

            <RadioButton
                android:id="@+id/resp_1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta3"

                />

            <RadioButton
                android:id="@+id/resp_1D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta4"

                />

            <!--PREGUNTA 2-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segunda pregunta"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/pregunta2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/resp_2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectItem"
                android:text="respuesta1" />

            <RadioButton
                android:id="@+id/resp_2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectItem"
                android:text="respuesta2" />

            <RadioButton
                android:id="@+id/resp_2C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectItem"
                android:text="respuesta3" />

            <RadioButton
                android:id="@+id/resp_2D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectItem"
                android:text="respuesta4" />


            <!--TERCERA PREGUNTA-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tercera pregunta"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/pregunta3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RadioButton
                android:id="@+id/resp_3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta1" />

            <RadioButton
                android:id="@+id/resp_3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta2" />

            <RadioButton
                android:id="@+id/resp_3C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta3"

                />

            <RadioButton
                android:id="@+id/resp_3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta4" />


            <!--CUARTA PREGUNTA-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuarta pregunta"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/pregunta4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RadioButton
                android:id="@+id/resp_4A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta1" />

            <RadioButton
                android:id="@+id/resp_4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta2" />

            <RadioButton
                android:id="@+id/resp_4C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta3" />

            <RadioButton
                android:id="@+id/resp_4D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectItem"
                android:text="respuesta4" />

            <!--PREGUNTA CINCO-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quinta pregunta"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/group5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/resp_5A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta1" />

            <RadioButton
                android:id="@+id/resp_5B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta2" />

            <RadioButton
                android:id="@+id/resp_5C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta3" />

            <RadioButton
                android:id="@+id/resp_5D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="respuesta4" />

            <Button
                android:id="@+id/bt_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="onClick_Submit"
                android:text="Enviar" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
                <TextView
                    android:id="@+id/estadis1A"
                    style="@style/style_opciones"
                    android:text="Estadistica 1A" />

                <TextView
                    android:id="@+id/estadis1B"
                    style="@style/style_opciones"
                    android:text="Estadistica 1B" />

                <TextView
                    android:id="@+id/estadis1C"
                    style="@style/style_opciones"
                    android:text="Estadistica 1C" />

                <TextView
                    android:id="@+id/estadis1D"
                    style="@style/style_opciones"
                    android:text="Estadistica 1D" />

            </LinearLayout>


            <!--PREGUNTA 2-->

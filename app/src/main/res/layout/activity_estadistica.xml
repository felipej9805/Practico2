                <TextView
                    android:id="@+id/estadis2C"
                    style="@style/style_opciones"
                    android:text="Estadistica 2C" />

                <TextView
                    android:id="@+id/estadis2D"
                    style="@style/style_opciones"
                    android:text="Estadistica 2D" />

            </LinearLayout>


            <!--TERCERA PREGUNTA-->
            <TextView
                android:id="@+id/pregunta3"
                style="@style/style_preguntas"
                android:text="Tercera pregunta" />

            <LinearLayout style="@style/style_LinearAgrupa">


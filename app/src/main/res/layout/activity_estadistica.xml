                android:text="Cuarta pregunta" />

            <LinearLayout style="@style/style_LinearAgrupa">

                <TextView
                    android:id="@+id/estadis4A"
                    style="@style/style_opciones"
                    android:text="Estadistica 4A" />

                <TextView
                    android:id="@+id/estadis4B"
